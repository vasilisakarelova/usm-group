{
    "name": "mzur/kirby-flash",
    "description": "Stores data in the session for the next request. Data is removed after the next page load.",
    "type": "kirby-plugin",
    "license": "MIT",
    "keywords": [
        "kirby",
        "flash",
        "session"
    ],
    "authors": [
        {
            "name": "Steve Jamesson",
            "email": "steve@evendev.com"
        },
        {
            "name": "Martin Zurowietz",
            "email": "martin@the-inspired-ones.de"
        }
    ],
    "autoload": {
        "psr-4": {
            "Jevets\\Kirby\\": "src/"
        },
        "files": [
            "src/helpers.php"
        ]
    },
    "autoload-dev": {
        "psr-4": {
            "Jevets\\Kirby\\Flash\\Tests\\": "tests/"
        }
    },
    "require-dev": {
        "phpunit/phpunit": "^9.0",
        "mzur/kirby-defuse-session": "^1.0",
        "getkirby/cms": "^3.0"
    },
    "require": {
        "getkirby/composer-installer": "^1.2"
    }
}
